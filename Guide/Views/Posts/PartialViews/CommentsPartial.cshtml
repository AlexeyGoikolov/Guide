@using Microsoft.AspNetCore.Identity
@model List<Comment>
@inject UserManager<User> UserManager

<div class="container">
    <div class="comment-wrapper">

        <hr>
        <ul class="media-list">
            @if (Model.Count != 0)
            {
                @foreach (var comment in Model)
                {
                    <li class="media">
                        <div class="media-body">
                            <strong class="text-success">
                                <a asp-controller="Account" asp-action="Details" asp-route-id="@comment.AuthorId">
                                    @comment.Author.UserName  
                                </a>
                                <span>сделал комментарий :</span> 
                                @if (UserManager.GetUserId(User) == comment.AuthorId || User.IsInRole("admin"))
                                {
                                <button type="button" class="btn btn-danger pull-right" 
                                        onclick="deleteComment('@comment.Id' ,'@comment.PostId ')">удалить</button>
                                }
                            </strong>
                            <span class="text-muted pull-right">
                                <small class="text-muted">@comment.DateOfCreate</small>
                            </span>
                            <p>
                                @comment.Description
                            </p>
                        </div>
                    </li>
                }
            }
            else {
                <h3>Еще никто не оставил комментарий</h3>
            }
        </ul>
    </div>
</div>
