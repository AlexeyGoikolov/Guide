@model Post

<div class="container">
    <div class="comment-wrapper">
        <div class="panel panel-info">
            <div class="panel-heading">
                Комментарии
            </div>
            <div class="panel-body">
                <textarea class="form-control textarea_chat" placeholder="write a comment..." rows="3"></textarea>
                <br>
                <button type="button" class="btn btn-info pull-right"  onclick="sendComment('@Model.Id')">Отправить</button>
                <div class="clearfix"></div>
                <hr>
                <ul class="media-list">
                    @if (ViewBag.ListComment.Count != 0)
                    {
                        @foreach (var commet in ViewBag.ListComment)
                        {
                            <li class="media">
                                <div class="media-body">
                                    <strong class="text-success">
                                        <a asp-controller="Account" asp-action="Details" asp-route-id="@commet.Author.Id">
                                            @commet.Author.Name
                                        </a>
                                    </strong>
                                    <span class="text-muted pull-right">
                                        <small class="text-muted">@commet.DateOfCreate</small>
                                    </span>
                                    <p>
                                        @commet.Description
                                    </p>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
