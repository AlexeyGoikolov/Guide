@model List<Post>

@{
    ViewBag.Title = "Список материалов";
    Layout = "_Layout";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <a class="nav-link text-dark" asp-area="" asp-controller="Posts" asp-action="Create">Добавить материал</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Название</th>
                <th scope="col">Автор</th>
                <th scope="col">Категория</th>
                <th scope="col">Тип</th>
                <th scope="col">Дата создания</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td><a asp-action="Preview" asp-controller="Posts" asp-route-id="@post.Id">@post.Title</a></td>
                    <td>@post.Author</td>
                    <td>@post.Category.Name</td>
                    <td>@post.Type.Name</td>
                    <td>@post.DateOfCreate</td>
                </tr>
            }
        </tbody>
    </table>
</div>