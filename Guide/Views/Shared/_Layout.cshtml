    <script src="~/assets/js/vendor/jquery-ui/jquery-ui.min.js"></script>

        <!--/ vendor javascripts -->
    
        <!-- ============================================
        ============== Custom JavaScripts ===============
        ============================================= -->
         <script src="~/assets/js/main.js"></script>

        <!--/ custom javascripts -->

        @RenderSection("Scripts", required: false)

