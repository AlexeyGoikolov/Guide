@model List<QuestionAnswer>

@{
    ViewBag.Title = "Список без ответов";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="col-6">@ViewBag.Title</h2>

    <div class="row">
        <div class="col">
            <a asp-action="Index" asp-controller="QuestionAnswers" class="pb-5 pt-3 pl-2">Вопросы с ответами</a>
            <a asp-action="IndexQuestions" asp-controller="QuestionAnswers" class="pb-5 pt-3 pl-2">Вопросы без ответов</a>
        </div>
        <div class="col-6 border-left">
            <a asp-action="Create" asp-controller="QuestionAnswers" class="pb-5 pt-3 pl-2" asp-route-status="Creat">Добавить</a>
            <a asp-action="Create" asp-controller="QuestionAnswers" class="pb-5 pt-3 pl-2"asp-route-status="ToQuestion">Задать вопрос</a>
        </div>
    </div>
    
    @if (Model.Count == 0)
    {
        <p>Список пуст</p>
    }
    else
    {
        <div class="row border">
            <div class="col">
                Вопросы
            </div>
        </div>
        @foreach (var glossery in Model)
        {
            <div class="row border">
                <div class="col">
                    <a asp-action="Preview" asp-controller="QuestionAnswers" asp-route-id="@glossery.Id">@glossery.Question</a>
                </div>
            </div>
        }
    }

</div>