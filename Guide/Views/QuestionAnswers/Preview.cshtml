@model QuestionAnswer

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <div class="pb-3 pt-5">
        <h2>@Model.Question</h2>
    </div>
    <div class="pt-3">
        @Model.Answer
    </div>
    
    <div>
        @if (Model.Answer != null)
        {
            <div>
                <a asp-action="Create" asp-controller="QuestionAnswers" asp-route-id="@Model.Id" asp-route-status="Edit">Редактировать</a>
            </div>
            <div>
                <a asp-action="Delete" asp-controller="QuestionAnswers" asp-route-id="@Model.Id" asp-route-status="Edit">Удалить</a>
            </div>
        }
        else
        {
            <div>
                <a asp-action="Create" asp-controller="QuestionAnswers" asp-route-id="@Model.Id" asp-route-status="ToAnswer">Ответить</a>
            </div>
            <div>
                <a asp-action="Delete" asp-controller="QuestionAnswers" asp-route-id="@Model.Id" asp-route-status="ToAnswer">Удалить</a>
            </div>
        }
        
    </div>
</div>