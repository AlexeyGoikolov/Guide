@model List<QuestionAnswer>

@{
    ViewBag.Title = "Часто задаваемые вопросы";
    Layout = "_LayoutEmployee";
}

<div class="page">
    <div class="pageheader">

        <h2>@ViewBag.Title</h2>

        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li style="background: #138a72">
                    <a asp-action="Details" asp-controller="Account"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="QuestionAnswers" asp-area=""> Вопрос-ответ</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="QuestionAnswers" asp-area=""> @ViewBag.Title</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-md-12">
            <!-- tile -->
            <section class="tile">
                <!-- tile header -->
                <div class="tile-header dvd dvd-btm">
                    <h1 class="custom-font">
                        <strong>Список часто задаваемых вопросов</strong>
                    </h1>
                    <ul class="controls">
                        <li>
                            <a role="button" tabindex="0" target="_blank" asp-action="" asp-controller=""><i class="fa fa-plus mr-5"></i>Добавить</a>
                        </li>
                        <li>
                            <a role="button" tabindex="0" target="_blank" asp-action="" asp-controller=""><i class="fa fa-eye mr-5"></i>Вид пользователя</a>
                        </li>
                    </ul>
                </div>
                <!-- /tile header -->

                <!-- tile body -->
                <div class="tile-body" style="display: block">
                    <div class="table-responsive">
                        @if (Model.Count == 0)
                        {
                            <p>Список пуст</p>
                            <div id="questionForm" class="text-center">

                            </div>
                        }
                        else
                        {
                            <table class="table table-custom" id="editable-usage">
                                <thead>
                                <tr>
                                    <th>Вопрос</th>
                                    <th>Кто задал</th>
                                    <th style="width: 160px;" class="no-sort">Действие</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var question in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>
                                            <a asp-action="Preview" asp-controller="QuestionAnswers" asp-area="" asp-route-id="@question.Id">@question.Question</a>
                                        </td>
                                        <td>@question.Asking.Name @question.Asking.Surname</td>
                                        <td >
                                            <a role="button" asp-action="" asp-controller="" asp-route-id="@question.Id" tabindex="0" class="edit text-primary text-uppercase text-strong text-sm mr-10">Изменить</a>
                                            <a role="button" tabindex="0" class="delete text-danger text-uppercase text-strong text-sm mr-10" asp-action="" asp-controller="" asp-route-id="@question.Id">Удалить</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
                <!-- /tile body -->
            </section>
            <!-- /tile -->
            <!-- tile -->
        </div>
        <!-- /col -->
    </div>
    <!-- /row -->

</div>  
   


@section Scripts
{
    <script>
                                               
        $(document).ready(function(){           
            $.ajax({               
                url: '@Url.Action("AddQuestionAjax", "QuestionAnswers", new {area = ""})',
                type: 'GET',               
                success: function(data) {
                    $('#questionForm').html(data)
                }
            });          
        });
        
        $(document).on("click", "#questionButton", function(event) {  
            event.preventDefault();
            let question = $('#questionInput').val();          
            $.ajax({               
                url: '@Url.Action("Create", "QuestionAnswers", new {area = ""})',
                type: 'GET',
                data: {'question': question},           
                success: function(data) {
                    if (data === true){
                       $('.page').html("<h2 class='text-green'>Вопрос успешно отправлен</h2>");
                       setTimeout(redirect, 1500);                      
                    }    
                    else{
                        $('.page').html("<h2 class='text-danger'>Вопрос не добавлен, повторите попытку</h2>");
                        setTimeout(function() {
                            location.reload();
                        }, 1000);                      
                    }
                }
            });          
        });
        
        function redirect() {
          window.location.href = "@Url.Action("Details","Account")"
        }
        
    </script>
}
