@model QuestionAnswersViewModel

@{

    ViewBag.Title = "Отправить вопрос";
    Layout = "_LayoutEmployee";
}
<div class="page">
    <div class="pageheader">

        <h2>@ViewBag.Title</h2>

        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li style="background: #138a72">
                    <a asp-action="Details" asp-controller="Account" asp-area=""><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="QuestionAnswers">Ситуационная база</a>
                </li>
                <li>
                    <a> @ViewBag.Title</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="card" style="width:100%;margin:auto;">
        <div class="card-body">
            <form asp-action="Create" asp-controller="QuestionAnswers" asp-area="" method="post" enctype="multipart/form-data" asp-antiforgery="true">
                @{ await Html.RenderPartialAsync("PartialViews/QuestionAnswers", Model); }
                <input type="hidden" value="@Model.QuestionAnswer.Id" asp-for="QuestionAnswer.Id">
                <input type="hidden" value="@Model.Status" asp-for="@Model.Status">
                <input type="hidden" value="@Model.StepId" asp-for="@Model.StepId">
                <button type="submit" class="btn btn-info" style="margin:  20px 0 0;">Отправить</button>
                <a asp-action="Index" asp-controller="QuestionAnswers" class="btn btn-info" style="margin:  20px 0 0;">Отменить</a>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
     CKEDITOR.replace('QuestionAnswer.Answer');
    </script>
}