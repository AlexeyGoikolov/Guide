@model Glossary

@{
    ViewBag.Title = "Глоссарий";
    Layout = "_Layout";
}

<div class="container">
    <div class="pb-3 pt-5">
        <h2>@Model.Name</h2>
    </div>
    <div class="pt-3">
        @Model.Description
    </div>

    <div>
        <div>
            <a asp-action="Edit" asp-controller="Glossarys" asp-route-id="@Model.Id">Редактировать</a>
        </div>
        <div>
            <a asp-action="Delete" asp-controller="Glossarys" asp-route-id="@Model.Id">Удалить</a>
        </div>
    </div>
</div>