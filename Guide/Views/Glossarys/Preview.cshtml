@model Glossary

@{
    ViewBag.Title = "Глоссарий";
    Layout = "_Layout";
}

<div class="container">
    <div class="pageheader">
        <h2>@Model.Name</h2>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Glossarys">Глоссарий</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Glossarys">Список</a>
                </li>
                <li>
                    <a asp-action="Preview" asp-controller="Glossarys" asp-route-id="@Model.Id">@Model.Name</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="pt-3">
        @Model.Description
    </div>

    <div>
        <div>
            <a asp-action="Edit" asp-controller="Glossarys" asp-route-id="@Model.Id">Редактировать</a>
        </div>
        <div>
            <a asp-action="Delete" asp-controller="Glossarys" asp-route-id="@Model.Id">Удалить</a>
        </div>
    </div>
</div>