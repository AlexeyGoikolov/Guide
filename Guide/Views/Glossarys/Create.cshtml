@model Glossary

@{
    ViewBag.Title = "Добавить термин с описанием";
    Layout = "_Layout";
}
<div class="container">
    <div class="pageheader">
        <h2>@ViewBag.Title</h2>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Glossarys">Глоссарий</a>
                </li>
                <li>
                    <a asp-action="Create" asp-controller="Glossarys">Добавить</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="card p-5" style="margin:auto;">
        <div class="card-header text-center">
            @ViewBag.Title
        </div>
        <div class="card-body">
            <form asp-action="Create" asp-controller="Glossarys" method="post" enctype="multipart/form-data" asp-antiforgery="true">
                <div class="row">

                    @{ Html.RenderPartial("PartialViews/Glossary", Model); }
                    <input type="hidden" value="@Model.Id" asp-for="Id">

                </div>
                <button type="submit" class="btn btn-info glossary-create-button">Добавить</button>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
            CKEDITOR.replace('Description');
    </script>
     
}