
@model List<Glossary>

@{
    ViewBag.Title = "Глоссарий";
    Layout = "_Layout";
}
<div class="page">
    <div class="pageheader">

        <h2>@ViewBag.Title</h2>

        <div class="page-bar">

            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Glossarys">@ViewBag.Title</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Glossarys">Список</a>
                </li>
            </ul>
        </div>
    </div>


    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-md-12">
            <!-- tile -->
            <section class="tile">
                <!-- tile header -->
                <div class="tile-header dvd dvd-btm">
                    <h1 class="custom-font">
                        <strong></strong>
                    </h1>
                    <ul class="controls">
                        <li>
                            <a role="button" tabindex="0" asp-action="Create" asp-controller="Glossarys"><i class="fa fa-plus mr-5"></i>Добавить</a>
                        </li>

                    </ul>
                </div>
                <!-- /tile header -->
                <!-- tile body -->
                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-custom" id="editable-usage">
                            <thead>
                            <tr>
                                <th>Название</th>
                                <th>Описание</th>
                                <th>Аббревиатура  </th>
                                <th>Источник  </th>
                                <th>Действия</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var glossery in @Model)
                            {
                                <tr class="odd gradeX">
                                    <div class="row border">
                                        <td>
                                            <a asp-action="Preview" asp-controller="Glossarys" asp-route-id="@glossery.Id">@glossery.Name</a>
                                        </td>
                                        <td>
                                            @glossery.Description
                                        </td>
                                        <td>
                                            @glossery.Abbreviation
                                        </td>
                                        <td>
                                            @glossery.Source
                                        </td>
                                        <td>
                                            <a role="button" asp-action="Edit" asp-controller="Glossarys" asp-route-id="@glossery.Id" tabindex="0" class="edit d-block text-primary text-uppercase text-strong text-sm mr-10">Редактировать</a>
                                            <a role="button" tabindex="0" class="delete d-block text-danger text-uppercase text-strong text-sm mr-10" asp-action="Delete" asp-controller="Glossarys" asp-route-id="@glossery.Id">Удалить</a>
                                        </td>
                                    </div>
                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /tile body -->

            </section>
            <!-- /tile -->
        </div>

        <!-- /row -->
    </div>
</div>

@section Scripts
{
    <script>
              $(window).load(function(){                                           
                var oTable = $('#editable-usage').DataTable({
                    "aoColumnDefs": [
                      { 'bSortable': false, 'aTargets': [ "no-sort" ] }
                    ]
                });          
            
                         });
            </script>
}

