@model List<Glossary>

@{
    ViewBag.Title = "Глоссарий";
    Layout = "_Layout";
}
<div class="page">
    <div class="pageheader">

        <h2>@ViewBag.Title</h2>

        <div class="page-bar">

            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Details" asp-controller="Account"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Glossarys">@ViewBag.Title</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Glossarys">Список</a>
                </li>
            </ul>
        </div>
    </div>


    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-md-12">
            <!-- tile -->
            <section class="tile">
                <!-- tile header -->
                <div class="tile-header dvd dvd-btm">
                    <h1 class="custom-font">
                        <strong></strong>
                    </h1>
                    <ul class="controls">
                    </ul>
                </div>
                <!-- /tile header -->
                <!-- tile body -->
                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-custom" id="editable-usage">
                            <thead>
                            <tr>
                                <th>Название</th>
                                <th>Описание</th>
                                <th>Аббревиатура  </th>
                                <th>Источник  </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var glossery in Model)
                            {
                                <tr class="odd gradeX">
                                    <div class="row border">
                                        <td>
                                            <a asp-action="Preview" asp-controller="Glossarys" asp-route-id="@glossery.Id">@glossery.Name</a>
                                        </td>
                                        <td>
                                            @Html.Raw(glossery.Description)
                                        </td>
                                        <td>
                                            @glossery.Abbreviation
                                        </td>
                                        <td>
                                            @glossery.Source
                                        </td>
                                    </div>
                                </tr>
                            }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /tile body -->

            </section>
            <!-- /tile -->
        </div>

        <!-- /row -->
    </div>
</div>

@section Scripts
{
    <script>
        $(window).load(function(){                                           
            let oTable = $('#editable-usage').DataTable({
                "aoColumnDefs": [
                    { 'defaultContent': '-', "targets": "_all", 'bSortable': false, 'aTargets': [ "no_sort" ] }
                ]
            });                         
        });
    </script>
}

