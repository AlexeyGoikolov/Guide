
@model List<Glossary>

@{
    ViewBag.Title = "Глоссарий";
    Layout = "_Layout";
}

<div class="container">
    <div class="pageheader">
        <h2>@ViewBag.Title</h2>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Glossarys">Глоссарий</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Glossarys">Список</a>
                </li>
            </ul>
        </div>
    </div>
    <a asp-action="Create" asp-controller="Glossarys" class=" pt-3">Добавить термин с определением</a>
    
    @if (Model.Count == 0)
    {
        <p>Список пуст</p>
    }
    else
    {
        <div class="row border mt-2 mx-1">
            <div class="col">
                Название
            </div>
            <div class="col-4 border-left">
                Описание
            </div>
            <div class="col border-left">
                Аббревиатура
            </div>
            <div class="col border-left">
                Источник
            </div>
            <div class="col border-left">

            </div>
        </div>

        @foreach (var glossery in Model)
        {
            <div class="row border mx-1">

                <div class="col">
                    <a asp-action="Preview" asp-controller="Glossarys" asp-route-id="@glossery.Id">@glossery.Name</a>
                </div>
                <div class="col-4 border-left">
                    @glossery.Description
                </div>
                <div class="col border-left">
                    @glossery.Abbreviation
                </div>
                <div class="col border-left">
                    @glossery.Source
                </div>
                <div class="col border-left">
                    <div>
                        <a asp-action="Edit" asp-controller="Glossarys" asp-route-id="@glossery.Id">Редактировать</a>
                    </div>
                    <div>
                        <a asp-action="Delete" asp-controller="Glossarys" asp-route-id="@glossery.Id">Удалить</a>
                    </div>
                </div>
            </div>
        }
    }

</div>


