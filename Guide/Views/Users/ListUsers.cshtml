@model List<User>

@{
    ViewBag.Title = "Список сотрудников";
    Layout = "_Layout";
}
<div class="container">
<h2>@ViewBag.Title</h2>
    
    @if (Model.Count == 0)
    {
        <p>Список пуст</p>
    }
    else
    {
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Имя</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Должность</th>
                <th scope="col">Активность</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@checked(i + 1)</th>
                    <td>
                        <a asp-controller="Users" asp-action="" asp-route-id="@Model[i].Id"> @Model[i].UserName</a>
                    </td>
                    <td>
                        @Model[i].Surname
                    </td>
                    <td>@Model[i].Position.Name</td>
                    @if (Model[i].Active)
                        {
                            <td>Активный </td>
                            <td><input type="submit" value="Заблокировать"></td>
                        }
                        else
                        {
                            <td>Активный </td>
                            <td><input type="submit" value="Активировать"></td>
                        }
                    <td><a asp-action="" asp-controller="">Редактировать</a></td>
                    <td><a asp-action="" asp-controller="">Добавить бизнес процес</a></td>
                     
                </tr>
            }
            </tbody>
        </table>
    }
</div>