@model SourceStateViewModel 

<label>Состояние</label>
  <span class="validationError" asp-validation-for="@Model.Source.SourceStateId"></span>
<div style="display: flex">
    <select id="sourceStateId" class="form-control" name="SourceStateId" asp-for="@Model.Source.SourceStateId">
        @foreach (var sourceState in Model.SourceStates)
        {
            <option value="@sourceState.Id">@sourceState.Name</option>
        }
    </select>

    <div class="input-group-append" >
        <button class="btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#modalSourceState">
            <i class="fas fa-plus"></i>
        </button>
    </div>
</div>

<div style="z-index:1040 !important;" class="modal fade" data-backdrop="true" id="modalSourceState" tabindex="0" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="text-align: center">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Добавить новое состояние</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3" style="justify-content: center">
                    <input type="text" id="sourceStateInput" class="input-register" style="width: 460px;">
                    <button class="btn btn-outline-secondary" data-dismiss="modal" type="button" id="sourceStateButton" style="margin:0 0 5px 17px;">Добавить</button>
                </div>
                @foreach (var sourceState in Model.SourceStates)
                {
                    <p style="text-align: right; ">- @sourceState.Name <button data-dismiss="modal" type="button" value="@sourceState.Id" class="btn buttonDeleteSourceState"><i class="fas fa-trash-alt"></i></button></p>
                }
            </div>
        </div>
    </div>
</div>
        