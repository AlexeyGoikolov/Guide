@model BookCreateViewModel
<div style="text-align: center">
    <span class="validationError">@Html.ValidationMessage("CustomError")</span>
</div>
<div class="row">
    <div class="col-sm-6 portlets sortable">
        <section class="tile portlet col - 6">

            <!-- tile body -->
            <div class="tile-body">
                <div >
                        <label>Код книги(ISBN)</label> <br/><span class="validationError" asp-validation-for="ISBN"></span>
                        <input id="isbn" class="form-control" type="text" asp-for="ISBN" value="@Model.ISBN">
                    </div>
                    <div class="form-group" id="author-row">
                        <label class="control-label">Выберите авторов</label>

                            <select multiple="" tabindex="3" class="chosen-select" style="width: 85%;">
                                <option value=""></option>
                                @{ Html.RenderPartial("PartialViews/AuthorPartial", Model); }
                            </select>
                            <button class="btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#modalType">
                                <i class="fas fa-plus"></i>
                            </button>

                    </div>
                    <div >
                        <label>Название</label><br/><span class="validationError" asp-validation-for="Name"></span>
                        <input id="name" class="form-control" type="text" asp-for="Name" value="@Model.Name">
                    </div>
                    <div >
                        <label>Год издания</label>
                        <br/><span class="validationError" asp-validation-for="YearOfWriting"></span>
                        <input id="year" placeholder="0000" class="form-control" type="text" asp-for="YearOfWriting" value="@Model.YearOfWriting">

                    </div>
                    <div class="col">
                        <span>Обложка</span>
                        <input id="coverPath" name="coverPath" class="btn" style="padding: 6px 0" type="file">
                    </div>

            </div>
            <!-- /tile body -->
        </section>
    </div>
    <div class="col-sm-6 portlets sortable">
        <section class="tile portlet col - 6">
            <!-- tile body -->
            <div class="tile-body">
                <div id="categories-row" class="form-group" style="justify-content: center;"></div>
                <div >
                    <label>В какой редакции :</label>
                    <input id="edition" class="form-control" type="text" asp-for="Edition" value="@Model.Edition">

                </div>
                <div >
                    <label>Физическое местонахождение</label>
                    <input id="physPath" class="form-control" type="text" asp-for="PhysicalPath" value="@Model.PhysicalPath">
                </div>

                <div class="col">
                    <span>Цифровая версия книги в формате .pdf</span>
                    <input id="bookFile" class="btn" style="padding: 6px 0" name="virtualPath" type="file">
                </div>
                <button id="submit-btn" type="submit" class="btn btn-info" style="width: 100%; margin-top: 1rem">Сохранить книгу и выйти</button>
            </div>

            <!-- /tile body -->
            <div class="modal fade" id="modalType" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="text-align: center">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Добавить нового Автора</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="input-group mb-3" style="justify-content: center">
                                <input type="text" id="typeInput" class="input-register" style="width: 460px;" >
                                <button class="btn btn-outline-secondary" data-dismiss="modal" type="button" id="typeButton" style="margin:0 0 5px 17px;">Добавить</button>
                            </div>
                            @foreach (var author in Model.AllAuthors)
                            {
                                <p style="text-align: right; " >- @author.Name <button data-dismiss="modal" type="button" value="@author.Id" class="btn buttonDeleteType"><i class="fas fa-trash-alt"></i></button></p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>





