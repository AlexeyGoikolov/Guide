@model List<Book>

@{
    ViewBag.Title = "Список книг";
    Layout = "_Layout";
}
<div class="page page-tables-datatables">
    <div class="pageheader">
    
        <h2>@ViewBag.Title</h2>

        <div class="page-bar">
    
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Profile" asp-controller="Service"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="BooksManage"> Книги</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="BooksManage"> Список</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-md-12">
            <!-- tile -->
            <section class="tile">
                <!-- tile header -->
                <div class="tile-header dvd dvd-btm">
                    <h1 class="custom-font">
                        <strong></strong>
                    </h1>
                    <ul class="controls">
                        <li>
                            <a role="button" tabindex="0" target="_blank" asp-action="Create" asp-controller="BooksManage"><i class="fa fa-plus mr-5"></i>Добавить</a>
                        </li>
                        <li>
                            <a role="button" tabindex="0" asp-action="Index" asp-controller="BooksManage">Активные</a>
                        </li>
                        <li>
                            <a role="button" tabindex="0" asp-action="Index" asp-controller="BooksManage" asp-route-activ="false">Удаленные</a>
                        </li>
                    </ul>
                </div>
                <!-- /tile header -->
                <!-- tile body -->
                <div class="tile-body">
                    <div class="table-responsive">
                        <table style="width: 100%" class="table table-custom" id="editable-usage">
                            <thead>
                            <tr>
                                <th>Название</th>
                                <th>Автор</th>
                                <th>Год издания</th>
                                <th style="width: 160px;" class="no-sort">Действие</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var book in Model)
                            {
                                <tr class="even gradeC">
                                    <td>
                                        <a asp-action="Details" asp-controller="BooksManage" asp-route-id="@book.Id">@book.Name</a>
                                    </td>
                                    <td>@book.Author</td>
                                    <td>@book.YearOfWriting</td>
                                    <td >
                                        <a class="btn btn-rounded-20 btn-default btn-sm mr-5 p-5" style="width:30px;" role="button" tabindex="0" 
                                           target="_blank" title="Вид пользователя" asp-action="Details" asp-controller="Books" asp-area="" asp-route-id="@book.Id"><i class="fa fa-eye"></i></a>
                                        <a class="btn btn-rounded-20 btn-default btn-sm mr-5 p-5" style="width:30px;"
                                           asp-action="" asp-controller="BooksManage" asp-route-id="@book.Id"><i class="fa fa-pencil"></i></a>

                                        @if (book.Active)
                                        {
                                            <a class="btn btn-rounded-20 btn-default btn-sm mr-5 p-5" style="width:30px;"
                                               asp-action="Delete" asp-controller="BooksManage" asp-route-id="@book.Id"><i class="fa fa-trash"></i></a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-rounded-20 btn-default btn-sm mr-5 p-5" style="width:30px;"
                                               asp-action="" asp-controller="" asp-route-id="@book.Id"><i class="reply"></i></a>
                                        }

                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            <!-- /tile body -->
            </section>
        <!-- /tile -->
        </div>
    <!-- /col -->
    </div>
<!-- /row -->
</div>



@section Scripts
{
    <script>
        $(window).load(function(){                                           
            let oTable = $('#editable-usage').DataTable({
                "aoColumnDefs": [
                    { 'defaultContent': '-', 'bSortable': false, 'aTargets': [ "no_sort" ] }
                ]
            });                         
        });
    </script>
}
