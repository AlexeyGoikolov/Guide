@model List<Post>

@{
    ViewBag.Title = "Список материалов";
    Layout = "_Layout";
}
        
<div class="page page-tables-datatables">

    <div class="pageheader">
        <h2>Материалы</h2>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Details" asp-controller="Account" asp-area=""><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="MaterialManage">Материалы</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="MaterialManage">Список</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-md-12">
            <!-- tile -->
            <section class="tile">
                <!-- tile header -->
                <div class="tile-header dvd dvd-btm">
                    <h1 class="custom-font">
                        <strong>Список материалов</strong>
                    </h1>
                    <ul class="controls">
                        <li>
                            <a role="button" tabindex="0" target="_blank" asp-action="Create" asp-controller="MaterialManage"><i class="fa fa-plus mr-5"></i>Добавить</a>
                        </li>
                        <li>
                            <a role="button" tabindex="0" target="_blank" asp-action="" asp-controller=""><i class="fa fa-eye mr-5"></i>Вид пользователя</a>
                        </li>
                    </ul>
                </div>
                <!-- /tile header -->

                <!-- tile body -->
                <div class="tile-body" style="display: block">
                    <div class="table-responsive">
                        <table class="table table-custom" id="editable-usage">
                            <thead>
                            <tr>
                                <th>Название</th>
                                <th>Автор</th>
                                <th>Категория</th>
                                <th>Тип</th>
                                <th>Дата создания</th>
                                <th style="width: 160px;" class="no-sort">Действие</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var post in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        <a asp-action="Details" asp-controller="MaterialManage" asp-route-id="@post.Id">@post.Title</a>
                                    </td>
                                    <td>@post.Author</td>
                                    @if (post.CategoryId != null)
                                    {
                                        <td>@post.Category.Name</td>
                                    }
                                    else
                                    {
                                        <td></td>  
                                    }
                                    <td>@post.Type.Name</td>
                                    <td>@post.DateOfCreate</td>
                                    <td >
                                        <a role="button" asp-action="Edit" asp-controller="MaterialManage" asp-route-id="@post.Id" tabindex="0" class="edit text-primary text-uppercase text-strong text-sm mr-10">Изменить</a>
                                        <a role="button" tabindex="0" class="delete text-danger text-uppercase text-strong text-sm mr-10" asp-action="Delete" asp-controller="MaterialManage" asp-route-id="@post.Id">Удалить</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /tile body -->
            </section>
            <!-- /tile -->
            <!-- tile -->
        </div>
        <!-- /col -->
    </div>
    <!-- /row -->
</div>      
@section Scripts
{
    <script> 
        $(window).load(function(){                                           
            let oTable = $('#editable-usage').DataTable({
                "aoColumnDefs": [
                    { 'defaultContent': '-', 'bSortable': false, 'aTargets': [ "no_sort" ] }
                ]
            });                         
        });
    </script>
}

