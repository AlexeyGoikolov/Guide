@model MaterialCreateViewModel

<div class="row">

    <div class="col-sm-8 portlets sortable">
        <section class="tile portlet col - 9">

            <!-- tile body -->
            <div class="tile-body">
                <div >
                    <label>Название</label>
                    <br/><span class="validationError" asp-validation-for="Title"></span>
                    <input id="name" class="form-control" type="text" asp-for="Title" value="@Model.Title">
                </div>
                <div id="editor" class="mt-20">
                    <label>Описание</label>
                    <textarea id="textContent"  name="textContent" type="text" asp-for="TextContent" value="@Model.TextContent"></textarea>
                </div>
                <div class="form-group" id="businessProcesses-row">
                    <label style="display: block" class="control-label">Бизнес процесс</label>

                    <select multiple="" tabindex="3" class="chosen-select">
                        <option value=""></option>
                        @foreach (var businessProcess in Model.BusinessProcessesList)
                        {
                            <option value="@businessProcess.Id">@businessProcess.Name</option>
                        } 
                    </select>
                </div>
                <div class="mt-20">
                    <label>Ключевые слова:</label>
                    <textarea id="keyWord" type="text" class="form-control" asp-for="Keys" value="@Model.Keys"></textarea>
                </div>
            </div>
            @if (ViewBag.Title == "Новый источник")
            {
                <button id="submit" type="submit" class="btn btn-info float-right" style=" width: 100%;">Создать</button>
            }
            else
            {
                <button id="submit" type="submit" class="btn btn-info float-right" style=" width: 100%;">Сохранить</button>
            }
            <!-- /tile body -->
        </section>
    </div>
    <div class="col-sm-4 portlets sortable">
        <section class="tile portlet col - 3">
            <!-- tile body -->
            <div class="tile-body">
                <div id="typeContent-row" class="form-group" style="justify-content: center;"></div>
                <div id="categories-row" class="form-group" style="justify-content: center;"></div>
                <div id="types-row" class="form-group" style="justify-content: center"></div>
                <div id="typeState-row" class="form-group" style="justify-content: center;"></div>
                <div>
                    <label>Автор</label>
                    <br/><span class="validationError" asp-validation-for="Author"></span>
                    <input id="author" class="form-control" type="text" asp-for="Author" value="@Model.Author">
                </div>
                <div>
                    <label>Дополнительная информация</label>
                    <textarea id="additional" class="form-control" type="text" asp-for="AdditionalInformation" value="@Model.AdditionalInformation"></textarea>
                </div>
                <div>
                    <label >Загрузить источник</label>
                    <input id="sourceFile" name="sourceFile" class="form-control" type="file" asp-for="SourceFile">
                </div>
                <div>
                    <label >Загрузить обложку в формате jpg либо png</label>
                    <input id="coverFile" name="coverFile" class="form-control" type="file" asp-for="CoverFile">
                </div>
                <br/><label>Шаблоны</label>
                <div id="template-row" class="form-group" style="justify-content: center"></div>
            </div>

            <!-- /tile body -->

        </section>
    </div>
</div>
<div style="text-align: center">
    <span class="validationError">@Html.ValidationMessage("CustomError")</span>
</div>


