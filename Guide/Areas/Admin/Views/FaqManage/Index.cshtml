@model List<QuestionAnswer>

@{
    ViewBag.Title = "Часто задаваемые вопросы";
    Layout = "_Layout";
}

<div class="page">
    <div class="pageheader">

        <h2>@ViewBag.Title</h2>

        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Details" asp-controller="Account"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="FaqManage"> Вопрос-ответ</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="FaqManage"> @ViewBag.Title</a>
                </li>
            </ul>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <p>Список пуст</p>
    }
    else
    {
        <div>
            <div class="col">
                Вопросы
            </div>
        </div>
        @foreach (var question in Model)
        {
            <div>
                <div class="col">
                    <a asp-action="Preview" asp-controller="FaqManage" asp-route-id="@question.Id">@question.Question</a>
                </div>
            </div>
        }
    }

</div>
