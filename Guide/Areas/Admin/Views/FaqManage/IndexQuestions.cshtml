@model List<QuestionAnswer>

@{
    ViewBag.Title = "Список без ответов";
    Layout = "_Layout";
}

<div class="page">
    <div class="pageheader">

        <h2>@ViewBag.Title</h2>

        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Details" asp-controller="Account" asp-area=""><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="FaqManage"> Вопрос-ответ</a>
                </li>
                <li>
                    <a asp-action="IndexQuestions" asp-controller="FaqManage"> Список без ответов</a>
                </li>
            </ul>
        </div>
    </div>
    
    @if (Model.Count == 0)
    {
        <p>Список пуст</p>
    }
    else
    {
        <h4>Вопросы</h4>
        @foreach (var glossery in Model)
        {
            <div class="mb-10">
                <a asp-action="Preview" asp-controller="FaqManage" asp-route-id="@glossery.Id">@glossery.Question</a>
            </div>
        }
    }

</div>