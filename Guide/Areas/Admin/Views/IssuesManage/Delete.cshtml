@model Issue

@{
    ViewBag.Title = "Удаление задачи";
    Layout = "_Layout";
}
<div class="page page-tables-datatables">

    <div class="pageheader">
        <h2>@ViewBag.Title</h2>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Details" asp-controller="Account" asp-area=""><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="IssuesManage">Задачи</a>
                </li>
                <li>
                    <a asp-action="Delete" asp-controller="IssuesManage" asp-route-id="@Model.Id">Удаление задачи</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="page">
        <h2>Вы уверены что хотите удалить задачу - @Model.Name</h2>
        <div>
            <div style="display: inline-block">
                <form asp-action="Delete" asp-controller="IssuesManage" asp-area="Admin" method="post" asp-route-id="@Model.Id">
                    <button class="btn btn-danger" type="submit">Подтвердить</button>
                </form>
            </div>
            <div style="display: inline-block">
                <a class="btn btn-info" asp-action="Index" asp-controller="IssuesManage" asp-area="Admin">Отменить</a>
            </div>
        </div>
    </div>
</div>
