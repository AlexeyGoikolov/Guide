@model AddForPositionViewModel

<div style="display: flex">
    <select type="text" class="form-control" asp-for="@Model.PositionId">
        <option value="" disabled selected>Выберите должность</option>
        @foreach (var position in Model.Positions)
        {
            <option value="@position.Id">@position.Name</option>
        }
    </select>
 <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#modalCategory">
            <i class="fas fa-plus"></i>
        </button>
    </div>
</div>

<div class="modal fade" id="modalCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="text-align: center">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Добавить Должность</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-20 center-block">
                    <input type="text" id="positionInput" class="input-register" style="width: 460px;">
                    <button class="btn btn-outline-secondary" data-dismiss="modal" type="button" id="positionButton" style="margin:0 0 5px 17px;">Добавить</button>
                </div>
                @foreach (var position in Model.Positions)
                {
                    <p style="text-align: right; ">- @position.Name <button data-dismiss="modal" type="button" value="@position.Id" class="btn buttonDeletePosition"><i class="fas fa-trash-alt"></i></button></p>
                }
            </div>
        </div>
    </div>
</div>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


