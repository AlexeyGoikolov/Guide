@model List<Step>

@if (Model.Count > 0)
{
    <ul class="list-group" style="cursor: pointer;">
        @foreach (var step in Model)
        {
            <li class="list-group-item">
                <input class="mb-0" type="hidden" name="id[]" value="@step.Id">
                <p class="mb-0"> @step.Name</p>
            </li>
        }
    </ul>
}