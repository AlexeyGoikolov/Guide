@model Issue

@{
    ViewBag.Title = "Новая задача";
    Layout = "_Layout";
}

<div class="page page-ui-portlets">
    <div class="pageheader">

        <h2>@ViewBag.Title</h2>

        <div class="page-bar">

            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Details" asp-controller="Account"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="IssuesManage"> Задачи</a>
                </li>
                <li>
                    <a asp-action="Create" asp-controller="IssuesManage"> Добавить</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="tile-body">
            <form class="create-form" asp-action="Create" asp-controller="IssuesManage" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                @{ await Html.RenderPartialAsync("PartialViews/IssueCreateEditPartial", Model); }
                <div class="">
                    <button style="width: 49.5%" type="submit" name="choice" value="1" class="btn btn-info fade-out-left-lg">Сохранить и перейти к добавлению шагов</button>
                    <button style="width: 50%" type="submit" name="choice" value="2" class="btn btn-info fade-out-left-lg">Сохранить и перейти к добавлению ЖР</button>
                </div>
               
                
              </form>
        </div>

    </div>
</div>

@section Scripts
{
    <script>
        CKEDITOR.replace('issueDescription');
    </script>
  
   
 
}