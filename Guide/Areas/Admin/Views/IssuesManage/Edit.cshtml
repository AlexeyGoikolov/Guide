@model Issue

@{
    ViewBag.Title = "Редактирование задачи";
    Layout = "_Layout";
}

<div class="page page-ui-portlets">
    <div class="pageheader">

        <h2>@ViewBag.Title</h2>

        <div class="page-bar">

            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Details" asp-controller="Account"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="IssuesManage"> Задачи</a>
                </li>
                <li>
                    <a asp-action="Edit" asp-controller="IssuesManage" asp-route-id="@Model.Id"> Редактирование задачи</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="tile-body">
            <form class="create-form" asp-action="Edit" asp-controller="IssuesManage" asp-area="Admin" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                @{ Html.RenderPartial("PartialViews/IssueCreateEditPartial", Model); }
                <div class="row">
                    <div class="col-sm-2">
                        <h5>Выберите действие из списка :</h5>
                    </div>
                    <div class="col-sm-6">
                        <select name="choice" style="width: 100%">
                            <option type="submit" value="1">Сохранить изменения</option>
                            <option type="submit" value="2">Изменить Шаги</option>
                            <option type="submit" value="3">Изменить ЖР</option>
                        </select>
                    </div>
                    <div>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-info fade-out-left-lg">Исполнить</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>

@section Scripts
{
    <script>
        CKEDITOR.replace('issueDescription');
    </script>
}
