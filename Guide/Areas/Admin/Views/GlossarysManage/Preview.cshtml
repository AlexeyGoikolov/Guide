@model Glossary

@{
    ViewBag.Title = "Глоссарий";
    Layout = "_Layout";
}

<div class="page">
    <div class="pageheader">
        <h2>@Model.Name</h2>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Profile" asp-controller="Service"><i class="fa fa-home"></i> Guide</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="GlossarysManage">Глоссарий</a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="GlossarysManage">Список</a>
                </li>
                <li>
                    <a asp-action="Preview" asp-controller="GlossarysManage" asp-route-id="@Model.Id">@Model.Name</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="pt-3">
        @Html.Raw(Model.Description)
    </div>

    <div>
        <div>
            <a asp-action="Edit" asp-controller="GlossarysManage" asp-route-id="@Model.Id">Редактировать</a>
        </div>
        <div>
            <a asp-action="Delete" asp-controller="GlossarysManage" asp-route-id="@Model.Id">Удалить</a>
        </div>
    </div>
</div>